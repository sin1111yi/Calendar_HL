<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lifeisfaceemptiness.handlelife.overview.fragment.AccountBookFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/ab_btn_select_date"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/ab_select_btn_img1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:contentDescription="@string/alarm_clock_default_description"
            android:src="@drawable/ali_arrow_right" />

        <TextView
            android:id="@+id/ab_select_tip1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:gravity="center|start"
            android:textColor="@color/deep_gray"
            android:textSize="17sp"
            android:text="@string/select_date"/>

        <TextView
            android:id="@+id/ab_selected_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/ab_select_btn_img1"
            android:gravity="center|end"
            android:textColor="@color/gray"
            android:textSize="15sp" />

    </RelativeLayout>

    <include layout="@layout/view_line"/>

    <com.lifeisfaceemptiness.handlelife.customui.InfoDialogButton
        android:id="@+id/ab_select_query_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include layout="@layout/view_line"/>

    <!--TODO: complete list-->

</LinearLayout>