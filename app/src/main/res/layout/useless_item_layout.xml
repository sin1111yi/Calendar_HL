<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded,HardcodedText,RtlSymmetry,SmallSp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_gray">

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/useless_item_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:layout_centerInParent="true"
                android:text="@string/item_empty_text"
                android:textColor="@color/black"
                android:textSize="25dp" />

        </RelativeLayout>


        <TextView
            android:id="@+id/useless_item_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:paddingStart="10dp"
            android:paddingBottom="10dp"
            android:text="@string/item_default_time"
            android:textColor="@color/black"
            android:textSize="15dp" />


        <ImageView
            android:id="@+id/useless_item_type_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_linear_folder" />


    </RelativeLayout>

</LinearLayout>