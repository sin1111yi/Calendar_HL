<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFA2CD5A"
    android:orientation="vertical"
    tools:context=".item.itemFragment">

    <EditText
        android:id="@+id/edit_content1"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="#FFFFFFFF"
        android:gravity="start"
        android:hint="@string/Filled_with_nothing"
        android:inputType="text"
        android:paddingStart="5dip"
        android:paddingEnd="5dip"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip">

        <Button
            android:id="@+id/itemlist_Add1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Add" />

        <Button
            android:id="@+id/itemlist_Del1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dip"
            android:layout_toStartOf="@id/itemlist_Add1"
            android:text="Del" />

    </RelativeLayout>
</LinearLayout>
