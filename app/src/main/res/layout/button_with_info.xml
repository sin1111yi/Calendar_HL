<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <Button
        android:id="@+id/btn_start_dialog"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="?android:attr/borderlessButtonStyle" />

    <ImageView
        android:id="@+id/btn_info_pic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ali_arrow_right"
        android:contentDescription="@string/alarm_clock_default_description" />

    <TextView
        android:id="@+id/btn_info_option_name"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:textSize="17sp"
        android:gravity="center|start"
        android:textColor="@color/deep_gray"/>

    <TextView
        android:id="@+id/btn_info_option_set"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/btn_info_pic"
        android:layout_marginEnd="5dp"
        android:textColor="@color/gray"
        android:textSize="15sp"
        android:gravity="center|end" />


</RelativeLayout>