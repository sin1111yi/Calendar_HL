<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lifeisfaceemptiness.handlelife.create.fragment.CreateAbFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/deep_gray">

        <TextView
            android:id="@+id/account_book_tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="15dp"
            android:text="@string/on_account_book_create_page_show"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <!--TODO:通过该布局尝试进行屏幕适配，现在在部分手机屏幕上会有显示问题-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="320dp">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ab_btn_income"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:src="@drawable/ic_income"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ab_btn_bill"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:src="@drawable/ic_bill"
            app:layout_constraintStart_toEndOf="@+id/ab_btn_income"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ab_btn_food"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:src="@drawable/ic_food"
            app:layout_constraintStart_toEndOf="@+id/ab_btn_medical"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ab_btn_medical"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:src="@drawable/ic_medical"
            app:layout_constraintStart_toEndOf="@+id/ab_btn_bill"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ab_btn_store"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:background="@color/white"
            android:src="@drawable/ic_money_pig"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ab_btn_income" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ab_btn_travel"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:background="@color/white"
            android:src="@drawable/ic_travel"
            app:layout_constraintStart_toEndOf="@+id/ab_btn_store"
            app:layout_constraintTop_toBottomOf="@+id/ab_btn_bill" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ab_btn_gift"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:background="@color/white"
            android:src="@drawable/ic_gift"
            app:layout_constraintStart_toEndOf="@+id/ab_btn_travel"
            app:layout_constraintTop_toBottomOf="@+id/ab_btn_medical" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ab_btn_leisure"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:background="@color/white"
            android:src="@drawable/ic_leisure"
            app:layout_constraintStart_toEndOf="@+id/ab_btn_gift"
            app:layout_constraintTop_toBottomOf="@+id/ab_btn_food" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ab_btn_educate"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:background="@color/white"
            android:src="@drawable/ic_educate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ab_btn_store" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ab_btn_clothe"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:background="@color/white"
            android:src="@drawable/ic_clothe"
            app:layout_constraintStart_toEndOf="@+id/ab_btn_educate"
            app:layout_constraintTop_toBottomOf="@+id/ab_btn_travel" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ab_btn_server"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:background="@color/white"
            android:src="@drawable/ic_server"
            app:layout_constraintStart_toEndOf="@+id/ab_btn_clothe"
            app:layout_constraintTop_toBottomOf="@+id/ab_btn_gift" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ab_btn_other"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:background="@color/white"
            android:src="@drawable/ic_other"
            app:layout_constraintStart_toEndOf="@+id/ab_btn_server"
            app:layout_constraintTop_toBottomOf="@+id/ab_btn_leisure" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/view_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/account_book_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="15dp"
            android:hint="@string/account_type_hint"
            android:textColor="@color/black"
            android:textColorHint="@color/deep_gray"
            android:textSize="18sp" />
    </RelativeLayout>

    <include layout="@layout/view_line" />

</LinearLayout>